#|
(define (simple-page ttl . elems)
  (html/ (head/ (title/ ttl))
	 (body/ (@/ (bgcolor "white"))
		(h1/ ttl)
		(node-set elems))))

(define (hello-world)
  (simple-page "Hello, world!"))
|#

(define (simple-page ttl . elems)
  (html/ (head/ (title/ ttl))
	 (body/ (@/ (bgcolor "black"))
		(h1/ ttl)
		(map/ identity elems))))

(define (hello-world)
  (simple-page "Hello, world!"))

(initialize-main-proc hello-world)
