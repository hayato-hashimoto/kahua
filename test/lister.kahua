;-*-scheme-*-

(use srfi-1)
(use util.list)

(define (simple-page-template ttl)
  (lambda (elems)
    (list (html: (head: (title: ttl))
		 (apply body: (@: (bgcolor "white"))
			(h1: ttl)
			elems)))))

(define all-items
  (map (lambda (n) (li: (x->string n))) (iota 15)))

(define (lister items template)
  (lambda ()
    (receive (cur next)
	     (split-at* items 10)
	     (template
	       (list (apply ul:
		            (append cur 
				    (if (null? next) '() 
					(list (li: 
					       (a/cont: 
						(@@: (cont (lister next template)))
						"Next")))))))))))

(initialize-main-proc (lister all-items (simple-page-template "Lister")))